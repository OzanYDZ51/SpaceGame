{
  "name": "spacegame-launcher",
  "version": "1.0.8",
  "description": "SpaceGame Launcher - Login, auto-update, and game launch",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --publish never"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OzanYDZ51/SpaceGame"
  },
  "author": "OzanYDZ51",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "discord-rpc": "^4.0.1"
  },
  "build": {
    "appId": "com.spacegame.launcher",
    "productName": "SpaceGame Launcher",
    "copyright": "Copyright 2026 SpaceGame",
    "directories": {
      "output": "../build/launcher"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "SpaceGame"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "runAfterFinish": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerSidebar": "assets/installerSidebar.bmp",
      "uninstallerSidebar": "assets/uninstallerSidebar.bmp",
      "installerHeader": "assets/installerHeader.bmp",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SpaceGame Launcher",
      "license": "assets/license.html",
      "displayLanguageSelector": false,
      "installerLanguages": [
        "fr",
        "en_US"
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "discord-rpc.js",
      "renderer/**/*"
    ]
  }
}
